{
    "name": "someniatko/simple-http-client",
    "description": "Simple facade for PSR-7, PSR-17 and PSR-18",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-client": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3"
    },
    "autoload": {
        "psr-4": {
            "Someniatko\\SimpleHttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "test/"
        }
    },
    "authors": [
        {
            "name": "someniatko",
            "email": "someniatko@gmail.com"
        }
    ]
}
